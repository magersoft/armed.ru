                .view__inner-feature
                    .view__item-feature__text
                        .view__item-feature__text-name.view-feature-title
                            p Характеристики:
                        .view__item-feature__text-value.view-feature-title
                            a(href="#detail") Все характеристики

                    include ../../pr_card/detail/detailData
                    each item in detailData
                        .view__item-feature__text

                            .view__item-feature__text-name
                                p Габариты
                            .view__item-feature__text-value
                                p #{item.dimensions}
                        .view__item-feature__text
                            .view__item-feature__text-name
                                p Воздушный поток на выходе
                            .view__item-feature__text-value
                                p #{item.airflow}
                        .view__item-feature__text
                            .view__item-feature__text-name
                                p Уровень шума
                            .view__item-feature__text-value
                                p #{item.noiselevel}
                        .view__item-feature__text
                            .view__item-feature__text-name
                                p Гарантия
                            .view__item-feature__text-value
                                p 3 года
                        .view__item-feature__text
                            .view__item-feature__text-name
                                p Срок службы
                            .view__item-feature__text-value
                                p #{item.lifetime}
                .view__inner-color
                    h5.description-item_title Другие варианты товара
                    p.description-item_text Цвет
                    .quickview-inner_color-box
                        a.quickview-item_color-link
                            img.quickview-item_color-image(src='images/quickview/quickview_color_1.png')
                        a.quickview-item_color-link
