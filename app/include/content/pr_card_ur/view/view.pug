                        a.quickview-item_color-link
                            img.quickview-item_color-image(src='images/quickview/quickview_color_4.png')
                .view__inner-size
                    //тут блок для размера//
                    p.description-item_text Размер
                    .quickview-inner_size-box
                        a.quickview-item_size-link 20x20
                        a.quickview-item_size-link 40x40
                        a.quickview-item_size-link 70x70
                        a.quickview-item_size-link 120x30