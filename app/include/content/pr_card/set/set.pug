        - var x = 9;
        - for (var i=1; i<=x; i++) {
            .set__slider-wrapper
                .set__slider-item
                    .set__slider-item__plus
                .set__slider-item__check
                .set__slider-inner
                    .set__slider-container
                        .set__slider-item.set__slider-item__img
                            img(src='../images/prcard/slider_card_2.png')
                        .set__slider-item.set__slider-item__text
