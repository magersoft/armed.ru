                                p
                                    |Деталь входящая в комплект к данному товару
                            .set__slider-item__text-cost
                                .set__cost-new
                                    p
                                        | 2 642
                                        span
                                            |&nbsp;&#8381;/шт.
                                .set__cost-old
                                    p
                                        | 2 642
                                        span
                                            | &nbsp;&#8381;/шт.
        - }
